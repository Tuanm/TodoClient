<UserControl x:Class="Todo.Controls.SquareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Todo.Controls">
    <Grid Width="100" Height="100">
        <Border Name="containerShadow"
                Background="White"
                CornerRadius="8" BorderThickness="2" BorderBrush="Black"
                Margin="20,20,5,5"/>
        <Border Name="container"
                Background="White"
                CornerRadius="8" BorderThickness="2" BorderBrush="Black"
                Cursor="Hand"
                Margin="5,5,20,20"
                MouseEnter="container_MouseEnter" MouseLeave="container_MouseLeave">
            <TextBlock Grid.Column="0" Name="text"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
